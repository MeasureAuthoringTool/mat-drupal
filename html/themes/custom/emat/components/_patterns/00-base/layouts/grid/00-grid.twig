{% set grid_base_class = grid_base_class|default('grid') %}

<div {{ bem(grid_base_class, (grid_modifiers), grid_blockname) }}>
  {% if grid_label %}
    <div class="grid__label">
      {% include "@atoms/02-text/00-headings/_heading.twig" with {
        "heading_level": 2,
        "heading": grid_label,
      } %}
      {% if grid_cta %}
        {% embed "@atoms/01-links/link/link.twig" with {
          link_url: grid_cta.url,
        } %}
          {% block link_content %}
            {{ grid_cta.title }}
            {% include "@atoms/04-images/icons/_icon.twig" with {
              icon_name: 'long-arrow-right',
            } %}
          {% endblock %}
        {% endembed %}
      {% endif %}
    </div>
  {% endif %}

  {% block grid_content %}
    {% for item in items %}
      <div class="grid__item">{{ item }}</div>
    {% endfor %}
  {% endblock %}
</div>
