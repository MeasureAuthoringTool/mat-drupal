{% set grid_base_class = 'grid' %}
{% set grid_blockname = 'info-box' %}

{% extends "@base/layouts/grid/00-grid.twig" %}

{% block grid_content %}
  {% for box in boxes %}
    {% set class = "info-box" %}
    {% include "@molecules/info-box/info-box.twig" with {
      "ib_modifiers": box.ib_modifiers,
      "ib_blockname": box.ib_blockname,
      "infobox_title": box.infobox_title,
      "infobox_subtitle": box.infobox_subtitle,
      "infobox_title_modifiers": box.infobox_title_modifiers,
      "infobox_link_title": box.infobox_link_title,
      "infobox_link_url": box.infobox_link_url,
      "infobox_text": box.infobox_text
    } %}
  {% endfor %}
{% endblock %}
