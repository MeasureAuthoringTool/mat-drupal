{% set teaser_base_class = teaser_base_class|default('teaser') %}

<article {{ bem(teaser_base_class, (teaser_modifiers), teaser_blockname) }}>

  {% include "@atoms/tag/tag.twig" with {
    tag_text: teaser_tag,
  } %}

  {% include "@atoms/02-text/00-headings/_heading.twig" with {
    heading_level: 2,
    heading: teaser_title,
    heading_blockname: teaser_base_class,
    heading_base_class: 'title',
    heading_url: teaser_url,
    heading_link_blockname: teaser_base_class,
    heading_link_base_class: 'title-link'
  } %}

  {% block teaser_content %}
    {% include "@atoms/02-text/text/01-paragraph.twig" with {
      "paragraph_content": teaser_body,
      "paragraph_blockname": teaser_base_class,
      "paragraph_base_class": 'body',
    } %}
  {% endblock %}

  {% embed "@atoms/01-links/link/link.twig" with {
    link_url: teaser_url,
    link_blockname: teaser_base_class,
  } %}
    {% block link_content %}Read More &raquo;{% endblock %}
  {% endembed %}
</article>
