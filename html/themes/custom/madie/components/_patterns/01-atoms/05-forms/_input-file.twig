{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{{ attach_library('madie/file-fields') }}
{% set field_name = attributes.id %}

<label class="js-file-box" for="{{ field_name }}">
  <div class="file-box">
    <span class="file-box__label">No file selected</span>
    <span class="file-box__button">Browse</span>
  </div>
</label>
<input {{ attributes.addClass('form-item__file') }} />{{ children }}
